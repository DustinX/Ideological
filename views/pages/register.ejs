<%  include ../partials/header     %>

<div class="registrationCard">
  <div class="registrationCardHeader">
    <h1>Sign Up</h1>
  </div>

  <form action="/register" method="POST">
    <div class="loginFormControl">
      <input class="registrationTB" type="text" name="username" placeholder="Username">
    </div>

    <div class="loginFormControl">
      <input class="registrationTB" type="password" name="password" placeholder="Password">
    </div>

    <div class="loginFormControl" id="expandFeedbackBtn">
      <button class="registrationBtn">Continue</button>
    </div>
  </form>
</div>

